<!-- Icons With Text Section -->
{% liquid
  assign sec = section.settings
  assign url = sec.url
  assign label = sec.label
%}
<div class="bg-[#f8f8f8] py-8 mb-11 md:pt-14 lg:pt-28 md:mb-20">
  <div class="container mx-auto xl:max-w-[1200px]">
    <div class="flex flex-col flex-wrap lg:flex-row lg:flex-nowrap justify-center items-center gap-12 lg:gap-4">
      {% for block in section.blocks %}
        <div class="lg:w-1/3 h-[168px] flex flex-col justify-center lg:justify-start gap-2 relative">
          <div class="absolute top-[-17.67px] w-full grid place-items-center">
            <div class="!block bg-[#6AADB6] rounded-full z-10 w-[159px] h-[159px]"></div>
          </div>
          <div class="flex justify-center grow max-h-[52px] z-20">{{ block.settings.icon }}</div>
          <h3 class="text-primary font-semibold text-center mx-auto text-xl z-20 font-open">
            {{ block.settings.icon_title }}
          </h3>
          <div class="text-primaryTxt w-[319px] text-ellipsis overflow-hidden text-center mx-auto text-base z-20 font-montserrat">
            {{ block.settings.icon_desc }}
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="flex justify-center">
      <a
        href="{{ url }}"
        class="border-solid lg:mt-[106px] border border-primary text-primaryTxt font-medium font-montserrat text-2xl px-5 py-2.5 "
      >
        {{- label -}}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Icons With Text",
  "settings": [
    {
      "type": "header",
      "content": "Please Add A New Block"
    },
    {
      "type": "url",
      "id": "url",
      "label": "CTA URL"
    },
    {
      "type": "text",
      "id": "label",
      "label": "CTA Label"
    }
  ],
  "blocks": [
    {
      "type": "Icons",
      "name": "Icon Block",
      "limit": 3,
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon SVG"
        },
        {
          "type": "text",
          "id": "icon_title",
          "label": "Icon Title"
        },
        {
          "type": "richtext",
          "id": "icon_desc",
          "label": "Icon Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons With Text"
    }
  ]
}
{% endschema %}
